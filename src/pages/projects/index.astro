    projects={[
      {
        name: 'Kadence Text Editor',
        description: 'A text editor project',
        links: [
          { type: 'github', href: 'https://github.com/ujsquared/kadenceTextEditor' }
        ]
      }
    ]}
  />

  <h2 id='learnings'>Learnings</h2>
  <ProjectSection
    projects={[
      {
        name: 'GPU Programming',
        description: 'Learning GPU programming with GLSL shaders and OpenGL',
